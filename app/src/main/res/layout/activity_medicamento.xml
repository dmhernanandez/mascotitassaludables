            android:fontFamily="@font/questrial"
            android:text="Ingrese Fecha y Hora que inicio"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edtPorDosis"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/questrial"
            android:text="Indicaciones"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edtFechaMedicamento"
            app:layout_constraintVertical_bias="0.096" />

        <EditText
            android:id="@+id/edtNumeroDosis"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="116dp"
            android:background="@drawable/input_gris"
            android:ems="10"
            android:fontFamily="@font/questrial"
            android:hint="1"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="#9E9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
