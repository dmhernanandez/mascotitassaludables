            android:background="@drawable/input_descripciones"
            android:ems="10"
            android:fontFamily="@font/questrial"
            android:hint="Se Receta porque el animal no tiene apetito"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColorHint="#9E9C9C"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnListoDesparacitante2"
            android:layout_width="113dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/listo"
            android:text="Listo"
            app:icon="@drawable/ic_vector_listo"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintEnd_toStartOf="@+id/btnCancelarDesparacitante2"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edtIndicacionesMedicamento"
            app:layout_constraintVertical_bias="0.355" />

        <Button
            android:id="@+id/btnCancelarDesparacitante2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:backgroundTint="@color/cancelar"
            android:text="cancelar"
            app:icon="@drawable/ic_vector_cancelar"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.879"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edtIndicacionesMedicamento"
            app:layout_constraintVertical_bias="0.355" />

        <EditText
            android:id="@+id/edtFechaMedicamento"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_gris"
            android:ems="10"
            android:fontFamily="@font/questrial"
            android:hint="31/03/2021"
